@model Web.ViewModels.LoginModel

<div class="container">
    <div class="navbar-header">
        <a asp-action="NotLoginIndex" asp-controller="Home" class="navbar-brand">Just Read Me</a>
    </div>
    <h2 class="page-header text-center header">Enter in web-site</h2>
   
    <form asp-action="Login" asp-controller="Account" asp-antiforgery="true" role="form">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter email"/>
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Passwords">Password</label>
                <input asp-for="Passwords" type="password" class="form-control" id="password" placeholder="Enter password"/>
                <span asp-validation-for="Passwords" />
            </div>
            <div class="form-group">
                <input type="submit" value="LogIn" class="btn btn-primary btn-block" />
                <a asp-action="Register" asp-controller="Account" class="btn bg-info btn-block">Go to registration</a>
            </div>
        </div>
    </form>
</div>
