@model Web.ViewModels.RegisterModel
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

<div class="container">
    <div class="navbar-header">
        <a asp-action="NotLoginIndex" asp-controller="Home" class="navbar-brand text-white">Just Read Me</a>
    </div>

    <h2 class="page-header text-center header">@Localizer["Title"]</h2>

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div class="form-group">
            <label asp-for="Nickname">@Localizer["NickName"]</label><br />
            <input type="text" asp-for="Nickname" class="form-control" placeholder="@Localizer["EnterNicknName"]" />
            <span asp-validation-for="Nickname" />
        </div>
        <div class="form-group">
            <label asp-for="Email">@Localizer["Email"]</label><br />
            <input type="email" asp-for="Email" class="form-control" id="email" placeholder="@Localizer["EnterEmail"]" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">@Localizer["Password"]</label><br />
            <input asp-for="Password" type="password" class="form-control" placeholder="@Localizer["EnterPassword"]" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">@Localizer["RepeitPassword"]</label><br />
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@Localizer["EnterPassword"]" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="@Localizer["LogInButton"]" class="btn btn-dark btn-block text-white" >
            <a asp-action="Login" asp-controller="Account" class="btn bg-dark btn-block text-white">@Localizer["GoToAuth"]</a>
        </div>
    </form>
</div>