@model JustReadMe.ViewModels.RegisterModel

<div class="container">
    <div class="navbar-header">
        <a asp-action="NotLoginIndex" asp-controller="Home" class="navbar-brand">Just Read Me</a>
    </div>

    <h2 class="page-header text-center header">Register</h2>
    
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div class="form-group">
            <label asp-for="Nickname">Nickname</label><br />
            <input type="text" asp-for="Nickname" class="form-control" placeholder="Enter nickname" />
            <span asp-validation-for="Nickname" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label><br />
            <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Password</label><br />
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Repeat password" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Register" class="btn btn-primary btn-block" />
            <a asp-action="Login" asp-controller="Account" class="btn bg-info btn-block">Go to Authorization</a>
        </div>
    </form>
</div>