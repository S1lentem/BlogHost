@model JustReadMe.Models.BlogModel
@{
    Layout = "~/Views/_LayoutHeader.cshtml";
}


<div class="container">
    <h1 class="text-center">@Model.Title</h1>
    <h4 class="text">@Model.Description</h4>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Article" asp-route-blog=@Model.Title>Add post</a>
</div>
<div class="container">
    @if (ViewBag.Posts != null)
    {
        foreach (var article in ViewBag.Posts)
        {
            <h3>@article.Tag</h3>
        }
    }
</div>