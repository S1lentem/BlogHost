@model BlogHostCore.DomainModels.Blog
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/_LayoutHeader.cshtml";
}
<div class="container">
    <h1 class="text-center title">Editing</h1>
    <form method="post" asp-action="Edit" asp-controller="Blog">
        <p>
            <label asp-for="Title">Title</label>
            <input type="text" class="form-control" asp-for="Title" />
        </p>
        <p>
            <label asp-for="Description">Description</label>
            <textarea class="form-control" rows="5" placeholder="Enter your new post" asp-for="Description"></textarea>
        </p>
        <p>
            <button class="btn btn-dark col-md-4">Change</button>
        </p>
    </form>
</div>

