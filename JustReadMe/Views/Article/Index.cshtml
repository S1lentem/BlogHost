@{
    Layout = "~/Views/_LayoutHeader.cshtml";
}

<div class="form-group container">
    <label for="Post">Post:</label>
    <textarea class="form-control" rows="5" placeholder="Enter your new post"></textarea>
</div>
<div class="form-group container">
    <label for="Blog">Blog:</label>
    <select name="Blogs">
        @foreach (var blog in ViewBag.Blogs)
        {
            <option value="@blog.Title">@blog.Title</option>
        }
    </select>
</div>
<div class="form-group container">
    <button class="btn btn-primary col-md-4">Post</button>
</div>
<div class="container">
    <h1>
        place for your articles
    </h1>
</div>