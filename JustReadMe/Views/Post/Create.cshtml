@model Web.ViewModels.PostCreateModel;
@{
    Layout = "~/Views/_LayoutHeader.cshtml";
}
<div class="container form-group">
    <h1>Create post for blog: @ViewBag.blogTitle</h1>
</div>
<form method="post" asp-antiforgery="true" onsubmit="return false;">
    <div class="form-group container">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" type="text" placeholder="Field for title your post" />
    </div>
    <div class="form-group container">
        <label>Tags:</label>
        <input type="text" data-role="tagsinput" />
    </div>
    <div class="form-group container">
        <label asp-for="Message">Post:</label>
        <textarea asp-for="Message" class="form-control" rows="5" placeholder="Enter your new post"></textarea>
    </div>
    <div class="form-group container">
        <button class="btn btn-primary col-md-4" type="button" onclick="this.form.submit()">Post</button>
    </div>
</form>